{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/organisms/HeroBanner/HeroBanner.tsx", "stories/components/Organisms/HeroBanner/HeroBanner.stories.jsx", "stories/components/Page/Layout/Footer/Footer.stories.jsx", "app/api/csp-report/route.ts", "app/api/csp/page.tsx"],
  "exclude": ["node_modules"]
}
